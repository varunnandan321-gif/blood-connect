rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS (Donor Identity Protection)
    // Rule: Users can only read/write their OWN profile data.
    // They CANNOT list or browse the global directory of other Donors.
    match /Users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // REQUESTS (Emergency Broadcasts)
    // Rule: Anyone logged in can read Active Requests (this is how Donors find matches).
    // Rule: Logged in users can create/update requests.
    match /Requests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.requesterId == request.auth.uid;
    }

    // CHATS (Private 1-on-1 Messages)
    // Rule: Only participants in the 'participants' array can view or modify the chat.
    match /Chats/{chatId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null; // Any authorized user can initiate
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
      
      // MESSAGES Subcollection
      // Rule: Can only read/write inside a Chat if you are a participant of that parent Chat
      match /Messages/{messageId} {
        allow read, write: if request.auth != null 
                           && request.auth.uid in get(/databases/$(database)/documents/Chats/$(chatId)).data.participants;
      }
    }

    // FACILITIES (Blood Banks & Hospitals)
    // Rule: Facilities inventory is public to all authenticated users.
    match /Facilities/{facilityId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null; // (In a real app, only Admins would write this)
    }
  }
}
